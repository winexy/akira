{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "jsx": "react",
    "removeComments": true,
    "sourceMap": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@views/*": ["./src/views/*"]
    }
  }
}
